.split_container
  display: flex
  position: relative
  width: 100%
  height: 100%
  .middleline      
    position: absolute
    height: 20px
    width: 20px
    top: 0px
    left: 0px
  .split_panel
    position: relative
    .panel_icon
      top: 0
      right: 0
  .split_tool
    position: absolute
    z-index: 1000
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,193,222,0.3)
    .icon
      position: absolute
      z-index: 2
      font-size: 30px
      cursor: pointer
      color:#00c1de