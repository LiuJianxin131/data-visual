::-webkit-scrollbar
  width 7px
  height 7px
  display: none
::-webkit-scrollbar-track
  background-color #000
::-webkit-scrollbar-thumb
  background-color #fff

.studio
  position: relative
  display: flex
  flex-direction: row 
  width: 100%
  height: calc(100vh - 50px)
  background: rgba(0,0,0,0.85)
  .st_content
    display: flex
    flex-direction: column
    flex-basis: 100%
    width: 100%
    height: 100%
    overflow hidden
    .canvas_wrapper
      flex-basis: 100%
      width: 100%
      height: 100%
      overflow: auto
      transition: all .3s linear
    .scroll-wrapper
      position relative
      height 30px
      width: 100%
      background: rgba(0,0,0,0.5)
      .scroll-postion
        position: absolute
        right: 10px
.ant-collapse-header
  color: #fff !important
ul
  margin: 0
  padding: 0
  list-style: 0
.ant-switch
  background-color: rgba(255, 255, 255, 0.5) !important
.ant-switch-checked 
  background-color: #1890ff !important

.st_content:hover ::-webkit-scrollbar
  display: block
