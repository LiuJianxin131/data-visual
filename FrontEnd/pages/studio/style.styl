::-webkit-scrollbar
  width 5px
  height 5px
::-webkit-scrollbar-track
  background-color #000
::-webkit-scrollbar-thumb
  background-color #fff

.studio
  position: relative
  display: flex
  flex-direction: row 
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.85)
  .st_content
    display: flex
    flex-direction: column
    flex-basis: 100%
    width: 100%
    height: 100%
    overflow hidden
    .canvas_wrapper
      flex-basis: 100%
      width: 100%
      height: 100%
      overflow: auto
      transition: all .3s linear
    .scroll-wrapper
      position relative
      height 30px
      width: 100%
      background: #fff
      .scroll-postion
        position: absolute
        right: 10px
        width:  200px
