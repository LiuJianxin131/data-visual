.transform_tool
  position: absolute
  z-index: 1000
  width: 300px
  height 300px
  background: red
  top: 0
  cursor move
  >div
    position: absolute
  .left-top
    top: 0
    left: 0
    width: 20%
    height 20%
    cursor nwse-resize
  .top
    top: 0
    left: 20%
    width: 60%
    height 20%
    cursor: ns-resize
  .right-top
    top: 0
    left: 80%
    width: 20%
    height 20%
    cursor: nesw-resize
  .right
    top: 20%
    right: 0
    width: 20%
    height 60%
    cursor: ew-resize
  .right-bottom
    top: 80%
    right: 0
    width: 20%
    height 20%
    cursor: nwse-resize
  .bottom
    top: 80%
    right: 20%
    width: 60%
    height 20%
    cursor: ns-resize
  .left-bottom
    top: 80%
    right: 80%
    width: 20%
    height 20%
    cursor: nesw-resize
  .left
    top: 20%
    right: 80%
    width: 20%
    height 60%
    cursor: ew-resize
