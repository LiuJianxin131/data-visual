.sidebar_container
  position: relative
  box-sizing: border-box
  display: flex
  flex-direction: row
  background: rgba(0, 0, 0, 0.8)
  transition: all 0.3s
  .collapse
    opacity 0
    width: 0 !important
  .bright
    color: rgb(255, 255, 255)
  .sidebar_bar
    width: 25px
    min-width: 25px
    color: rgba(255, 255, 255, 0.65)
    border-right: 1px solid rgba(255, 255, 255, 0.2)
    ul
      margin: 0
      padding: 0
      width: 100%
      list-style: none
      li
        width: 100%
        text-align: center
        margin: 10px 0
        cursor: pointer
        span
          font-size: 13px
  .sidebar_panels
    width: 100%
    .panel
      height: 100%
      overflow: hidden
      .head
        position relative
        color: #ffffff
        .arrow
          position absolute
          top: 5px
          right: 5px
          width: 15px
          height: 15px
          cursor pointer   
          transform: rotate(0deg)
        .title
          margin: 3px 0 0 0
          text-align: center 
          padding: 0
          font-size: 15px
          font-weight: 300
          color: #ffffff
          border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      .content
        margin: 0 0 0 1px
        height: calc(100vh - 25px)
        overflow-y: auto
        overflow-x: hidden
        background: #000
        border-radius: 3px
.sidebar_container_right
  flex-direction: row-reverse !important 
  .sidebar_bar
    border-left: 1px solid rgba(255, 255, 255, 0.2) !important 
  .head
    .arrow
      transform: rotate(180deg) !important 
      left: 10px !important 